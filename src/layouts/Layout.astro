---
import { GoogleFontsOptimizer } from 'astro-google-fonts-optimizer';

interface Props {
	title: string;
	font: string;
	codeFont: string;
}

const { title, font, codeFont } = Astro.props;
const fontUrl = `https://fonts.googleapis.com/css2?family=${font.replace(/ /g, '+')}:wght@400;700&family=${codeFont.replace(
	/ /g,
	'+'
)}:wght@400;700`;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="David Elliott, Engineering Manager and Software Engineer" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<GoogleFontsOptimizer url={fontUrl} />
		<meta property="og:title" content="David Elliott" />
		<meta property="og:description" content="David Elliott, Engineering Manager and Software Engineer" />
		<meta property="og:image" content="https://via.placeholder.com/1200x630
" />
		<meta property="og:url" content="https://davidjelliott.com" />
		<meta property="og:type" content="website" />
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global define:vars={{ font, 'code-font': codeFont }}>
	* {
		@media (prefers-color-scheme: dark) {
			color: white;
			background-color: #23262d;
		}

		@media (prefers-color-scheme: light) {
			color: #23262d;
			background-color: white;
		}

		margin: 0;
	}

	/* Always use 'font' unless in a pre or code block */
	body {
		font-family: var(--font);
	}

	pre,
	code {
		font-family: var(--code-font);
		font-size: 1rem;
	}

	pre {
		font-size: 1rem;
	}

	code {
		font-size: 1rem;
	}
</style>
